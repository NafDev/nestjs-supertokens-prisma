datasource db {
  provider = "postgres"
  url      = env("DATABASE_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String  @id @default(uuid()) @db.Uuid
  email        String  @unique
  passwordHash String
  verified     Boolean @default(false)
  roles        Role[]

  @@map("user")
}

enum Role {
  ADMIN
  USER
}
