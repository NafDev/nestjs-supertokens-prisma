{
	"extends": "@tsconfig/node17",
	"compilerOptions": {
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"rootDir": "src",
		"incremental": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true,
		"stripInternal": true,
		"noEmitOnError": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"ts-node": {
		"files": true
	},
	"include": ["src/**/*.ts", "src/**/*.json", "src/**/*.js"]
}
